# Backend Environment Variables
# Copy this file to .env and update the values

# Django Secret Key - Generate a unique one for production!
# Use: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-your-secret-key-here

# Debug Mode - Set to False in production
DEBUG=True

# Allowed Hosts - Comma-separated list
# For local: localhost,127.0.0.1
# For production: your-backend-url.onrender.com,localhost,127.0.0.1
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS Allowed Origins - Frontend URLs (no trailing slash!)
# For local: http://localhost:5173,http://127.0.0.1:5173
# For production: https://your-frontend-url.vercel.app
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# MongoDB Connection String
# For local: mongodb://localhost:27017/
# For production: mongodb+srv://username:password@cluster.mongodb.net/
MONGO_URI=mongodb://localhost:27017/

# MongoDB Database Name
MONGO_DB_NAME=publiclink_db
